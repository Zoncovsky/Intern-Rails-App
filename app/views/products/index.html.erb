<h1>Products</h1>

<table class="table table-bordered table-hover">
  <thead class="table-dark" style="text-align: center;">
    <tr>
      <th>Name product</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody style="text-align: center;">
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name_product %></td>
        <td><%= product.quantity %></td>
        <td><%= link_to 'Show', product, class:"btn btn-outline-secondary" %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class:"btn btn-outline-secondary" %></td>
        <td><%= link_to 'Destroy', product, class:"btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, class:"btn btn-success", style:"color: white; margin-left: 20px;" %>
